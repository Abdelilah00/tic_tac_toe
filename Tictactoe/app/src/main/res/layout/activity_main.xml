<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#09ba7a"
    tools:context="tac.tic.com.tictactoe.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_auto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:background="@drawable/shap_btn"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="about"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="287dp" />

        <Button
            android:id="@+id/btn_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_dual"
            android:layout_centerVertical="true"
            android:background="@drawable/shap_btn"
            android:gravity="center_vertical"
            android:onClick="clk_auto"
            android:padding="10dp"
            android:text="Auto player"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="225dp" />

        <Button
            android:id="@+id/btn_dual"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_auto"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp"
            android:background="@drawable/shap_btn"
            android:gravity="center_vertical"
            android:onClick="clk_dual"
            android:padding="10dp"
            android:text="Dual player"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="162dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
